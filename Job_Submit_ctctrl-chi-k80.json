{
    "name": "ctctrl-tacc",
    "appId": "ctctrl-icicledev",
    "appVersion": "0.1",
    "description": "Invoke ctcontroller to run camera-traps on CHI@TACC x86 system with K80 GPU",
    "parameterSet": {
      "envVariables": [ 
        {"key": "CT_CONTROLLER_TARGET_SITE", "value": "CHI@TACC"},
        {"key": "CT_CONTROLLER_NODE_TYPE", "value": "gpu_k80"},
        {"key": "CT_CONTROLLER_GPU", "value": "true"},
        {"key": "CT_CONTROLLER_CONFIG_PATH", "value": "/config.yml"}
      ],
      "archiveFilter": {
         "includeLaunchFiles": false
      }
    }
}
